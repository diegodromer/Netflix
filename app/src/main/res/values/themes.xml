<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Netflix" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/cor_bg_app</item> //topo das notificacoes do celular
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>
    
    <style name="SearchViewTheme">
        <item name="colorControlNormal">@color/white</item>
        <item name="android:textColorHint">#7C7C7C</item>
        <item name="android:editTextColor">@color/white</item>
    </style>

    <style name="FloatingActionButtonTheme">
        <item name="colorOnSecondary">@color/white</item>
    </style>
</resources>